[Unit]
Description=Install DCOS Master

[Service]
Type=oneshot
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/mkdir -p /home/montana/mesosphere/dcos
ExecStartPre=/usr/bin/wget http://104.197.93.20/dcos/dcos_install.sh -O /home/montana/mesosphere/dcos/dcos_install.sh
