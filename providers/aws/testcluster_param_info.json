{
  "DatadogApiKey": {
    "Description": "API Key to use for DataDog",
    "Type": "String",
    "MinLength": "32",
    "AllowedPattern": "^[0-9a-f]+$",
    "ConstraintDescription": "Must be a hexadecimal string"
  },
  "GithubDeployKeyBase64": {
    "Description": "Base64 encoded Github Deploy key",
    "Type": "String",
    "MinLength": "20",
    "AllowedPattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$",
    "ConstraintDescription": "Must be base64 encoded"
  }
}
