#!/bin/bash
set -o nounset -o pipefail

# Download external debian because the debian one is patched in ways that break
# stuff from npm...
curl http://nodejs.org/dist/v0.12.0/node-v0.12.0-linux-x64.tar.gz -o node-v0.12.0-linux-x64.tar.gz
tar -xzf node-v0.12.0-linux-x64.tar.gz
export PATH=$PATH:`pwd`/node-v0.12.0-linux-x64/bin


cd "/pkg/src/dcos-ui"
npm install
npm install -g broccoli-cli
npm run dist
cp -r dist/ "$PKG_PATH"/usr
