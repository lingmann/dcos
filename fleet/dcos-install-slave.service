[Unit]
Description=Install DCOS Slave

[Service]
Type=oneshot
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/mkdir -p /home/montana/mesosphere/dcos
ExecStartPre=/usr/bin/curl -fsSL http://10.240.189.241/dcos/dcos_install.sh -o /home/montana/mesosphere/dcos/dcos_install.sh
ExecStart=/usr/bin/bash /home/montana/mesosphere/dcos/dcos_install.sh slave

[X-Fleet]
Global=true
MachineMetadata=TYPE=COMPUTE
MachineMetadata=TYPE=STORAGE
